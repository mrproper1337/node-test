doctype html
html(ng-app='main')
    head
        title node Test
        link(rel='stylesheet', href='/stylesheets/chat.css')
    body(ng-controller='messageCtrl')
        h1.text-center.login-title Welcome #{user.firstName}
        script.
            var user = '#{user.firstName}';
        a(href='/signout', class='text-center new-account') Sign Out
        //div {{ messages }}
        ul#messages
            li(ng-repeat='message in messages')
                strong {{message.username}}
                br
                span {{message.text}}
        form(ng-submit='addMessage(send)')
            input#m(ng-model='send.text' autocomplete='off' required)

            button send
        script(src="/socket.io/socket.io.js")
        //script(src="/js/libs/jquery/dist/jquery.min.js")
        script(src="/js/libs/bower-angularjs/angular.js")
        script(src='/js/libs/bower-angularjs/angular-route.js')
        //script(src="/js/chat.js")
        script(src='/js/app.js')
        script(src='/js/services.js')
        script(src='/js/controllers.js')
        script(src='/js/filters.js')
        script(src='/js/directives.js')
